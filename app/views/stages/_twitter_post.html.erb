<%= token_tag %>
			<% if @social.name %>
			<label for="textfield" class="control-label">Logged In as <%= @social.name%></label>
			<%= link_to (url_for({:action => :tw_logout, :controller => :stages, :id => @game.id})), {:class => 'btn btn-mini'} do %>
								<i class="icon-signout"></i> Login as different user
			<%end%>
			<%end%>
			<label for="textfield" class="control-label"><code><h4>Goal</h4></code> <pre>Send a 'tweet' about <%=@task.name%> and wait till<br /> your tweet is <code><%=@task.rule_type%> by <%=@task.goal_count%></code></pre> </label>
			<%= text_area_tag 'twpost' ,(@post.nil?)?"" : @post['text'] , class: 'input-block-level',style: 'resize:none',rows:"5" ,:data => {'rule-maxlength' => "200", 'rule-required' => "true"} %>
			<br/>
			<% if @number_of_likes %>
			<label for="textfield" class="control-label"><%= image_tag(asset_path("favorite_on.png"))%> <%= @number_of_likes %></label>
			<%else%>
			<label for="textfield" class="control-label"><%= image_tag(asset_path("favorite_on.png"))%></label>
			<%end%>
			<%= button_tag ' tweet', data: {:disable_with => 'Please wait...'},:class => 'btn btn-blue icon-twitter-sign pull-right'%>