<div class="row-fluid">
	<div class="span12">
		<div class="box box-bordered">
			<div class="box-title">
				<h3><i class="icon-th-list"></i> Levels</h3>
				<% if @game.id != nil%>
				<div class="highlight-toolbar">
					<div class="pull-right">
						<div class="btn-toolbar">
							<div class="btn-group">
								<%= link_to (url_for({:action => :new, :controller => :levels, :id => @game.id})), {:class => 'btn btn-primary'} do %>
								<i class="icon-plus-sign"></i> Add Level
								<%end%>
							</div>
						</div>
					</div>
				</div>
				<%end%>
			</div>
			<div class="box-content">

				<div class="span5">
					<p>
						<ul class="nav nav-tabs nav-stacked">
							<% if !@levels.nil?%>
							<% @levels.each do |l| %>
							<li>
								<%= link_to l.name , edit_game_level_path(@game, l) %>
							</li>
							<%end%>
							<%end%>
						</ul>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
<br>

