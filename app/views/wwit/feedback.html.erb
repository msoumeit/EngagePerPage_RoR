<body class='theme-orange login'>
	<div class="wrapper">
		<h5><a href="/">Powered by EPP</a></h5>
		<div class="login-body">
			<h2>Contact Us</h2>
			<%if !notice.blank?%>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">
					&times;
				</button>
				<%= notice %>
			</div>
			<%end%>
			<%= form_tag url_for(:controller => :wwit, :action => :feedback ) , id: 'feedbackform', :class => 'form-validate' do %>
			<%= token_tag %>
			<div class="control-group">
				<div class="email controls">
					<%= text_field_tag 'name' ,"", :placeholder =>"Your Name", :autofocus => true,class: 'input-block-level',:data => {'rule-required' => "true"} %>
				</div>
			</div>
			<div class="control-group">
				<div class="email controls">
					<%= email_field_tag :email, nil, :placeholder =>"Your Email" , :class => 'input-block-level' , :data => {'rule-required' =>"true" ,'rule-email' => "true" }%>
				</div>
			</div>
			<div class="control-group">
				<div class="email controls">
					<%= text_area_tag :reason, nil, size: "15x5", :placeholder =>"Send us a message.", :class => 'input-block-level' , :data => {'rule-required' =>"true"}%>
				</div>
			</div>
			<div class="submit">
				<%= button_tag ' Send Message', data: {:disable_with => 'Please wait...'},:class => 'btn btn-danger icon-inbox pull-right'%>
			</div>
			<div class="forget">
				<a href="#"></a>
			</div>
			<%end%>
		</div>
	</div>
</body>