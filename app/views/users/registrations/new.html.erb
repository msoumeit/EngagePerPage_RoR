<body class='theme-orange login'>
	<div class="wrapper">
		<h5><a href="http://www.engageperpage.com" target="_blank">Powered by EPP</a></h5>
		<div class="login-body">
			<h2>SIGN UP</h2>
			<%if !notice.blank?%>
			<div class="alert alert-success">
				<button type="button" class="close" data-dismiss="alert">
					&times;
				</button>
				<%= notice %>
			</div>
			<%end%>
			<%if !devise_error_messages2!.blank?%>
			<div class="alert alert-error">
				<ul>
					<%= devise_error_messages2! %>
				</ul>
			</div>
			<%end%>
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-validate"}) do |f| %>
			<div class="control-group">
				<div class="email controls">
					<%= f.email_field :email, :autofocus => true , :placeholder =>"Email address", :class => 'input-block-level' , :data => {'rule-required' =>"true" ,'rule-email' => "true" }%>
				</div>
			</div>
			<div class="control-group">
				<div class="email controls">
					<%= f.text_field :name, :placeholder =>"Screen Name", :class => 'input-block-level' , :data => {'rule-required' =>"true"}%>
				</div>
			</div>
			<div class="control-group">
				<div class="pw controls">
					<%= f.password_field :password , :placeholder =>"Password", :class => 'input-block-level' , :data => {'rule-required' =>"true"}%>
				</div>
			</div>
			<div class="control-group">
				<div class="pw controls">
					<%= f.password_field :password_confirmation , :placeholder =>"Reenter Password", :class => 'input-block-level' , :data => {'rule-required' =>"true"}%>
				</div>
			</div>
			<div class="submit">
				<%= f.submit "Sign up" ,:class =>'btn btn-primary'%>
				<% if session[:previous_url] %>
				<%= link_to session[:previous_url], {:class => 'btn btn-danger'} do %>
				<i class="icon-backward"></i> Back
				<%end%>
				<%end%>
			</div>
			<span></span>
			<div class="forget">
				<a href="#"><span></span></a>
			</div>
			<% end %>
		</div>
	</div>
</body>